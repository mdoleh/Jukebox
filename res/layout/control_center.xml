                                       <!--android:layout_height="wrap_content"-->
                                       <!--android:layout_alignParentBottom="true"-->
                                       <!--android:layout_centerHorizontal="true"-->
                                       <!--ads:adUnitId="@string/banner_control_center"-->
                                       <!--ads:adSize="SMART_BANNER"/>-->
</RelativeLayout>